<div class="container" style="margin-top: 30px;
    background-color: rgb(236, 236, 236); padding: 20px 30px; border-radius: 20px;">
    {{#each errors}}
    <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>{{this}}</strong>
    </div>
    {{/each}}
    {{#if message}}
        <div class="alert alert-primary alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>{{message}}</strong>
        </div>
    {{/if}}
    <h6>Sign In</h6>
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-lg btn-block text-white" style="background-color: #4267b2;">
                <span class="fa fa-facebook-f"></span>
                Sign in with Facebook</button>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-lg btn-block text-white" style="background-color:#EA4335;">
                <span class="fa fa-google-plus"></span>
                Sign in with Google+</button>
        </div>
    </div>
    <h4>OR</h4>
    <form action="/users/login" method="POST">
        <div class="form-group row">
            <div class="col-md">
                <input type="email" name="email" class="form-control" id="email" placeholder="Email"
                    {{#if values}} value={{values.email}} {{else}} value="" {{/if}} required>
                <input type="password" name="password" class="form-control" id="password"
                    placeholder="Password" value="" required>
                <button type="submit" style="margin-top: 10px; margin-bottom: 10px;"
                    class="btn btn-success btn-lg btn-block">
                    <span class="fa fa-sign-in">
                    </span>
                    Sign In</button>
            </div>
        </div>
        <a href="#">Forgot Password?</a>
        <hr>
        <a type="button" style="margin-top: 10px; margin-bottom: 10px;" class="btn btn-primary btn-lg btn-block" href="/users/signup">
            <span class="fa fa-user-plus">
            </span>
            Sign up New Account</a>
    </form>
</div>