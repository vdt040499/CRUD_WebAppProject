    <div class="col-6">
        <h4>Liên hệ với chúng tôi</h4>
        <form action="/users/contact" class="needs-validation" method="POST" novalidate>
            <div class="col-md row">
                <label class="col-sm-4 col-form-label" for="name">Họ và Tên</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" name="name" value="" required>
                </div>
                <div class="valid-feedback">
                    Tốt
                </div>
                <div class="invalid-feedback">
                    Xin nhập họ tên
                </div>
            </div>
            <div class="col-md row">
                <label class="col-sm-4 col-form-label" for="email">Địa chỉ email :</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="email" name="email" value="" required>
                </div>
                <div class="valid-feedback">
                    Tốt
                </div>
                <div class="invalid-feedback">
                    Xin nhập địa chỉ email
                </div>
            </div>
            <div class="col-md row">
                <label class="col-sm-4 col-form-label" for="phone">Số điện thoại :</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" id="phone" name="phone" value="" required>
                </div>
                <div class="valid-feedback">
                    Tốt
                </div>
                <div class="invalid-feedback">
                    Xin nhập số điện thoại
                </div>
            </div>

            <div class="col-md row">
                <label class="col-sm-4 col-form-label" for="message">Thông điệp</label>
                <div class="col-sm-8">
                    <textarea class="form-control" name="message" id="message" cols="30"
                        rows="10"></textarea>
                    <button style="margin-top: 20px; text-align: center;" class="btn btn-primary"
                        type="submit">Submit</button>
                </div>
            </div>
        </form>
        <script src="../../public/script/contact.js"></script>
    </div>
</div>
