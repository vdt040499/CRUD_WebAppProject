<h3>Create Product</h3>
{{# each errors}}
<div class="alert alert-danger alert-dismissible">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>{{this}}</strong>
</div>
{{/each}}

<form action="/products/create" class="needs-validation" method="POST" enctype="multipart/form-data" novalidate>
    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom01">Id</label>
        <div class="col-sm-10">
            <input type="text" name="id" class="form-control" id="validationCustom01" required>
        </div>
    </div>
    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom02">Title:</label>
        <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="validationCustom02" value="" required>
        </div>
    </div>
    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom03">Summary:</label>
        <div class="col-sm-10">
            <input type="text" name="description" class="form-control" id="validationCustom03" value="" required>
        </div>
    </div>

    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom04">ImageUrl</label>
        <div class="col-sm-10">
            <input style="margin-top: 10px;" name="image" class="form-control-file" type="file" id="validationCustom04"
                accept="image/*">
        </div>
    </div>

    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom05">Price :</label>
        <div class="col-sm-10">
            <input type="number" name="price" class="form-control" id="validationCustom05" value="" required>
        </div>
    </div>

    <div class="col-md row">
        <label class="col-sm-2 col-form-label" for="validationCustom06">Number :</label>
        <div class="col-sm-10">
            <input type="number" name="amount" class="form-control" id="validationCustom06" value="" required>
            <button style="margin-top: 20px; text-align: center;" class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</form>
